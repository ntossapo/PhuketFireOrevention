<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:minHeight="120dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_ev_it_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="120dp"
        android:scaleType="centerCrop"
        android:minWidth="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_ev_it_texttype"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lv_ev_it_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="50dp"
        android:maxHeight="50dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_ev_it_textaddr"
        android:layout_toRightOf="@+id/lv_ev_it_image"
        android:layout_below="@+id/lv_ev_it_texttype"
        android:layout_alignRight="@+id/lv_ev_it_texttype"
        android:layout_alignEnd="@+id/lv_ev_it_texttype"
        android:minHeight="40dp"
        android:maxHeight="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lv_ev_it_textstatus"
        android:layout_below="@+id/lv_ev_it_textaddr"
        android:layout_toRightOf="@+id/lv_ev_it_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/lv_ev_it_image"
        android:minHeight="30dp"
        android:maxHeight="30dp"/>
</RelativeLayout>